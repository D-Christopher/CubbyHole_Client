<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    
    
    <TextView
        android:id="@+id/fichierDetailNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="titre"
        android:textSize="20sp" 
        android:textColor="#3A8EBA"/>
    
    <TextView
        android:id="@+id/fichierDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fichierDetailNom"
        android:layout_centerHorizontal="true"
        android:text="date" />
    <Button
        android:id="@+id/fichierDetailPartager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fichierDetailDate"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Partager"
        android:onClick="Partager" />
    
    <Button
        android:id="@+id/fichierDetailTelecharger"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fichierDetailPartager"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Télécharger"
        android:onClick="Telecharger" />
    
    <Button
        android:id="@+id/fichierDetailSupprimer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fichierDetailTelecharger"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Supprimer"
        android:onClick="Supprimer" />
    
    <Button
        android:id="@+id/fichierDetailGenerer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fichierDetailSupprimer"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Générer"
        android:onClick="Generer" />

</RelativeLayout>
