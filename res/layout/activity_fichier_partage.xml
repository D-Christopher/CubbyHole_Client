<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/TitrePartageFichier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#3A8EBA"
        android:text="Choisir un contact"/>
    
    <Spinner 
        android:id="@+id/choixContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/TitrePartageFichier"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>
    
    <Button
        android:id="@+id/PartageFichier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choixContact"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Partager"
        android:onClick="Partager" />
    
</LinearLayout>