<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >
    
    <TextView
        android:id="@+id/TitreClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#3A8EBA"
        android:text="Bienvenue"/>
    
    <TextView
        android:id="@+id/TitreDerail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitreClient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text=""/>
    
    <TextView
        android:id="@+id/TitreMesFichier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitreDerail"
        android:layout_marginTop="10dp"
        android:textColor="#3A8EBA"
        android:textSize="20sp"
        android:text="Mes fichiers" />
    
    <ListView 
        android:id="@+id/listeStockageClient"
        android:layout_width="match_parent"
        android:layout_height="140dp" 
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TitreMesFichier" />
    
    <TextView
        android:id="@+id/TitreMesFichierPartager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listeStockageClient"
        android:layout_marginTop="10dp"
        android:textColor="#3A8EBA"
        android:textSize="20sp"
        android:text="Fichiers partagÃ©s avec moi" />
    
    <ListView 
        android:id="@+id/listeStockageClientPartager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TitreMesFichierPartager" />

</RelativeLayout>
