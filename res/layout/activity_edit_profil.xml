<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.java.GestionProfil"
    tools:ignore="MergeRootFrame" >
    
<TextView
    android:id="@+id/profilPrenom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="50dp"
    android:textSize="18sp"
    android:text="" />

<TextView
    android:id="@+id/profilNom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/profilPrenom"
    android:text=""
    android:textSize="18sp" />

 <Button
        android:id="@+id/profilbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Valider"
        android:onClick="UpdatePassword"/>

 <EditText
     android:id="@+id/profilVerifEmail"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/profilEditNewEmail"
     android:ems="10"
     android:hint="Verification du mail"
     android:inputType="textEmailAddress" />

     <requestFocus />
 
 <TextView
     android:id="@+id/profilMail"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/profilNom"
     android:text=""
     android:textSize="18sp" />

 <EditText
     android:id="@+id/profilEditNewEmail"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/profilNewEmail"
     android:ems="10"
     android:hint="Adresse mail"
     android:inputType="textEmailAddress" />

 <TextView
     android:id="@+id/profilNewEmail"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/profilMail"
     android:layout_alignParentLeft="true"
     android:text="Nouvelle adresse mail :" />

 <EditText
     android:id="@+id/profilVerifMdp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/profilbutton"
     android:layout_alignParentLeft="true"
     android:layout_marginBottom="52dp"
     android:ems="10"
     android:hint="Verification du Mdp"
     android:inputType="textPassword" />

 <EditText
     android:id="@+id/profilEditNewMdp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/profilVerifMdp"
     android:layout_alignParentLeft="true"
     android:ems="10"
     android:hint="Mot de passe"
     android:inputType="textPassword" />

 <TextView
     android:id="@+id/profilNewMdp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/profilEditNewMdp"
     android:layout_alignParentLeft="true"
     android:layout_marginBottom="20dp"
     android:text="Nouveau mot de passe :" />

 <Button
     android:id="@+id/button2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true"
     android:layout_below="@+id/profilVerifEmail"
     android:text="Valider"
     android:onClick="UpdateMail"/> />

</RelativeLayout>



